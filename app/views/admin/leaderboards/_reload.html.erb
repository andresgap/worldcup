$("div.errors").html("")
<% if leaderboard.errors.any? %>
  <% leaderboard.errors.full_messages.each do |message| %>
    $("div.errors").append($("<div class='alert alert-danger'/>").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $("#leaderboards-content")
    .html("<%= escape_javascript(render 'index', leaderboards: leaderboards) %>");
  $("#leaderboards-modal").modal("hide");
<% end %>
