<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">&times;</button>
  <h4 class="modal-title">Edit Leaderboard</h4>
</div>
<div>
  <%= form_for(leaderboard,
    url: leaderboard_path(leaderboard), remote: true, method: :put) do |f| %>
    <%= render 'form', f: f, leaderboard: leaderboard %>
  <% end %>
</div>
