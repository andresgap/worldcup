<div class="container page">
<h1>Groups</h1>
<% @groups.each do |group|%>
    <h2>Group <%= group.code%></h2>
    <table id="group-table" class="table table-striped">
        <thead>
            <th>Position</th>
            <th>Team</th>
            <th>MP</th>
            <th>W</th>
            <th>D</th>
            <th>L</th>
            <th>GF</th>
            <th>GA</th>
            <th>+/-</th>
            <th>PTS</th>
        </thead>
        <tbody>
            <%group.teams.each_with_index do |team, index|%>
                <tr>
                    <td><%= index + 1 %></td>
                    <td>
                        <%= image_tag(team.flag, class: 'flag') %>
                        <%= team.name%>
                    </td>
                    <td><%=team.matches_played%></td>
                    <td><%=team.win%></td>
                    <td><%=team.draw%></td>
                    <td><%=team.lost%></td>
                    <td><%=team.goal_in_favor%></td>
                    <td><%=team.goal_against%></td>
                    <td><%=team.goal_difference%></td>
                    <td><%=team.points%></td>
                </tr>
            <%end%>
        </tbody>
    </table>
<% end %>
</div>
