<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">&times;</button>
  <h4 class="modal-title">Invite User</h4>
</div>
<div>
  <%= form_for(invitation, url: leaderboard_invitations_path(leaderboard),
    remote: true) do |f| %>
    <%= render 'form', f: f, leaderboard: leaderboard, invitation: invitation, users: users %>
  <% end %>
</div>
